/* 按钮样式 */
.issueButton {
  /* 按钮位置 */
  position: fixed;
  bottom: 5vh;
  /* margin: 20px; */
  width: 43vw !important;
  margin-left: 5px;
  background-color: #f3ca7e;
  color: #ffffff;
}

/* 按钮点击特效 */
.issueButton1 {
  background-color: #f1d39b;
}

/* 通用样式 */
/* 纵向+居中 */
.Column_Center {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  flex-direction: column;
}

/* 横向居中 */
.Row_Center {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.Row{
  height: 32vw;
  display: flex;
  flex-direction: row;
}