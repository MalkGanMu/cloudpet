/* 标题 */
.title_input_focus {
  margin-top: 1vh;
  margin-bottom: 1vh;
  width: 94%;
  height: 6vh;
  font-size: 4vh;
  border: 0;
  outline: 0;
  /* 隐藏输入时的边框 */
  border-bottom: 1px solid #f3ca7e;

  /* 设置下划线 */
  background: none;
}

.title_input_blur {
  margin-top: 1vh;
  margin-bottom: 1vh;
  width: 94%;
  height: 6vh;
  font-size: 4vh;
  border: 0;
  outline: 0;
  /* 隐藏输入时的边框 */
  border-bottom: 1px solid rgb(136, 136, 136);
  /* 设置下划线 */
  background: none;
}

/* 内容输入框 */
#content_input_focus{
  margin: 5px;
  width: 94%;
  height: 24vh;
  font-size: 3vh;
  border: 0;
  outline: 0;
  /* 隐藏输入时的边框 */
  border-bottom: 1px solid #f3ca7e;
  /* 设置下划线 */
  background: none;
}

#content_input_blur{
  margin: 5px;
  width: 94%;
  height: 24vh;
  font-size: 3vh;
  border: 0;
  outline: 0;
  /* 隐藏输入时的边框 */
  border-bottom: 1px solid rgb(136, 136, 136);
  /* 设置下划线 */
  background: none;
}

