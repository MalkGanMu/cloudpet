/* pages/smallNest/smallNest.wxss */

/* 搜索框 */
#searchBox {
  width: 90%;
  height: 6vh;
  display: flex;
  background-color: rgb(230, 230, 230);
  border-radius: 70rpx;
  /* margin: 1vh; */

  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.section {
  /* font-size: 3vh; */
  width: 10vh;
  align-self: center;
  /* margin-left: 40rpx; */
}

#searchInput {
  /* font-size: 3vh; */
  width: 100%;
  height: 100%;
  display: flex;
  margin-left: 35rpx;
}

#searchBtn {
  height: 5vh;
  width: 5vh;
  margin-right: 20rpx;
}

/* 分类 */
#classification {
  display: inline-block;
}

#classBlock {
  background-color: rgb(230, 230, 230);
  border-radius: 70rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.box_row_left {
  width: 345rpx;
  float: left;
  padding: 20rpx;
  /* background-color: #f1f1f1; */
}

.box_row_right {
  width: 345rpx;
  float: left;
  padding: 20rpx 20rpx 20rpx 0;
}

.petBox {
  margin-bottom: 25px;
  display: flex;
  flex-direction: column;
  align-items: center;

  border: rgb(230, 230, 230);
  border-style: solid;
  border-width: 1rpx;
  border-radius: 20rpx;
}


button {
  display:flex;
  align-items: center;
  justify-content: center;
  font-size: 6vw;
  text-align: center;
  margin-top: 10px;
  color: #FFF;
  background-color: #f3ca7e !important;
  border-radius: 10px;
  line-height: 40px;
}
.cilkBut {
  color: #FFF;
  background-color: #f1d39b !important;
}


/* 通用css */
/* 横向布局 */
.row {
  display: flex;
  flex-direction: row;
}

/* 纵向布局,横向居中 */
.colum_center {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 横向布局,两端对齐 */
.row_spaceBetween {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/* 纵向居中 */
.cloumCenter {
  display: flex;
  align-items: center;
}

/* 横向居中 */
.rowCenter {
  display: flex;
  justify-content: center;
}