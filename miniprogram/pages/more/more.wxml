<view style="height: 100%;margin-top: 10rpx;">
  <scroll-view class="listSCroll" scroll-y="true" lower-threshold="50" bindscrolltolower="scrolltolower">

    <view class="row">

      <!-- 1 -->
      <view id="row1">
        <view wx:for="{{petPostList}}" wx:key="index" wx:for-item="item" wx:if="{{index % 3 == 0}}" class="petBox">
          <image src="{{item.imgs[0]}}" style="height: 250rpx;width: 250rpx;"></image>
        </view>
      </view>

      <!-- 2 -->
      <view id="row1">
        <view wx:for="{{petPostList}}" wx:key="index" wx:for-item="item" wx:if="{{index % 3 == 1}}" class="petBox">
          <image src="{{item.imgs[0]}}" style="height: 250rpx;width: 250rpx;"></image>
        </view>
      </view>

      <!-- 3 -->
      <view id="row1">
        <view wx:for="{{petPostList}}" wx:key="index" wx:for-item="item" wx:if="{{index % 3 == 2}}" class="petBox">
          <image src="{{item.imgs[0]}}" style="height: 250rpx;width: 250rpx;"></image>
        </view>
      </view>


    </view>


  </scroll-view>
</view>